<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.diegoorozco.trabajofinal.EntradasFragment"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:src="@drawable/logo_bocolotes_app"/>
        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="1"
                android:id="@+id/r1"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="2"
                android:id="@+id/r2"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="3"
                android:id="@+id/r3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="4"
                android:id="@+id/r4"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="5"
                android:id="@+id/r5"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="6"
                android:id="@+id/r6"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="7"
                android:id="@+id/r7"/>
        </RadioGroup>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/Entrada1"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/crepa1"
                    android:paddingTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/bCrepe1"
                    />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/Entrada3"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/crepa4"
                    android:paddingTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/bCrepe3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="230dp"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/Entrada2"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/crepa2"
                    android:paddingTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/bCrepe2"
                    />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="210dp"
                    android:background="@drawable/boton_redondo"
                    android:text="@string/Entrada4"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/crepa3"
                    android:paddingTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/bCrepe4"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ver Pedido y Cobrar"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/green"
            android:id="@+id/Bpedido"/>
    </LinearLayout>
</ScrollView>

